{{> header }}

<div class="relative p-4 w-full max-w-md h-full md:h-auto">
	<div class="relative p-4 text-center bg-white rounded-lg shadow-sm dark:bg-gray-800 sm:p-5">
		<h3 class="mb-4 text-lg font-semibold text-gray-900 dark:text-white">
			Log-in to
			<span class="text-3xl sm:text-3xl text-gray-400 dark:text-gray-500"
				style="position: relative; bottom: -2px">{</span>
			{{ client }}
			<span class="text-3xl sm:text-3xl text-gray-400 dark:text-gray-500"
				style="position: relative; bottom: -2px">}</span>
		</h3>
		<p class="mb-4 font-light text-gray-500 dark:text-gray-400">The application will gain access to the following
			information about you:</p>
		<ul role="list" class="mb-4 space-y-4 text-left mb-5">
			<li class="flex items-center space-x-2 text-gray-900 dark:text-white">
				<svg aria-hidden="true" class="shrink-0 w-4 h-4 text-green-400 dark:text-green-500" fill="currentColor"
					viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd"
						d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
						clip-rule="evenodd"></path>
				</svg>
				<span class="text-gray-500 dark:text-gray-400">Full Name:</span>
				<p>{{ name }}</p>
			</li>
			<li class="flex items-center space-x-2 text-gray-900 dark:text-white">
				<svg aria-hidden="true" class="shrink-0 w-4 h-4 text-green-400 dark:text-green-500" fill="currentColor"
					viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd"
						d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
						clip-rule="evenodd"></path>
				</svg>
				<span class="text-gray-500 dark:text-gray-400">Username:</span>
				<p>{{ username }}</p>
			</li>
			<li class="flex items-center space-x-2 text-gray-900 dark:text-white">
				<svg aria-hidden="true" class="shrink-0 w-4 h-4 text-green-400 dark:text-green-500" fill="currentColor"
					viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd"
						d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
						clip-rule="evenodd"></path>
				</svg>
				<span class="text-gray-500 dark:text-gray-400">E-Mail:</span>
				<p>{{ email }}</p>
			</li>
		</ul>
		{{#if samlResponseData}}
			<form method="post" action="{{ samlACS }}" id="SAMLResponseForm">
				<input type="hidden" name="SAMLResponse" value="{{ samlResponseData }}" />
				<input type="hidden" name="RelayState" value="{{ samlRelayState }}" />
				<input type="submit" value="Continue" data-modal-toggle="successListModal"
					class="py-2 px-3 text-sm font-medium text-center text-white rounded-lg bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-hidden focus:ring-primary-300 dark:focus:ring-primary-900" />
			</form>
		{{else}}
			<a href="{{ link }}" type="button" data-modal-toggle="successListModal"
				class="py-2 px-3 text-sm font-medium text-center text-white rounded-lg bg-primary-600 hover:bg-primary-700 focus:ring-4 focus:outline-hidden focus:ring-primary-300 dark:focus:ring-primary-900">
				Continue
			</a>
		{{/if}}
	</div>
</div>

{{> footer }}
